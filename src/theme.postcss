@import url('https://fonts.googleapis.com/css?family=Merriweather');
@import url('https://fonts.googleapis.com/css2?family=DM+Sans');

:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: 'DM Sans';
	--theme-font-family-heading: 'DM Sans';
	--theme-font-color-base: var(--color-surface-900);
	--theme-font-color-dark: var(--color-surface-50);
	--theme-rounded-base: 16px;
	--theme-rounded-container: 8px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: var(--color-surface-900);
	--on-secondary: 0 0 0;
	--on-tertiary: 0 0 0;
	--on-success: var(--color-surface-900);
	--on-warning: var(--color-surface-900);
	--on-error: 0 0 0;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #da8fdb */
	--color-primary-50: 249 238 250; /* ⬅ #f9eefa */
	--color-primary-100: 248 233 248; /* ⬅ #f8e9f8 */
	--color-primary-200: 246 227 246; /* ⬅ #f6e3f6 */
	--color-primary-300: 240 210 241; /* ⬅ #f0d2f1 */
	--color-primary-400: 229 177 230; /* ⬅ #e5b1e6 */
	--color-primary-500: 218 143 219; /* ⬅ #da8fdb */
	--color-primary-600: 196 129 197; /* ⬅ #c481c5 */
	--color-primary-700: 164 107 164; /* ⬅ #a46ba4 */
	--color-primary-800: 131 86 131; /* ⬅ #835683 */
	--color-primary-900: 107 70 107; /* ⬅ #6b466b */
	/* secondary | #897ad1 */
